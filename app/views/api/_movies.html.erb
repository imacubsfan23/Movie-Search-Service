<% @queried[0...7].each do |movie| %>
    <td>
            <% if movie["poster_path"] %>
                <%= 
                    link_to image_tag("https://image.tmdb.org/t/p/w500/#{movie["poster_path"]}",
                    alt:"#{movie["title"]}"), 
                    movie_path(movie["id"]),
                    :class => "img" 
                %>
            <% else %>
                <div class="show-link">
                    <%= 
                        link_to "Pictureless: #{movie["title"]}",
                        movie_path(movie["id"]),
                        :class => "img" 
                    %>
                </div>
            <% end %>
    </td>
<% end %>