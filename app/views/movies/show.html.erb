<div class="container">
    <div class="column">
        <img src="https://image.tmdb.org/t/p/w500/<%= @movie["poster_path"] %>" alt="<%= @movie["title"] %>" class="shows-img"></img>
    </div>
    <div class="column">
        <div class="row">
            <h1 class="title">
                <%= link_to @movie["title"], @movie["homepage"], target: :_blank %>
            </h1>
            <% if @movie && @movie["production_companies"][0] %>
            <h2>Created by <%= @movie["production_companies"][0]["name"] %></h2>
            <% end %>
        </div>
        <table>
            <tr>
                <% if @movie["genres"][0] %>
                    <%= @movie["genres"][0]["name"] %>
                <% end %>
                <% if @movie["runtime"] %>
                    | <%= @movie["runtime"] %> min(s)
                <% end %>
                <% if @movie["release_date"] %>
                    | Released <%= @movie["release_date"] %>
                <% end %>
            </tr>
        </table>
        <div class="row">
            <h3>Overview</h3> 
            <div class="overview">
                <%= @movie["overview"] %>
            </div>
        </div>
        <div class="row">
            <h3>Popularity Score: <%= @movie["popularity"] %></h3>
        </div>
    </div>
</div>