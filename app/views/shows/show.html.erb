<div class='container my-5'>
    <div class='row text-center'>
        <div class='col-lg'>
            <img src='https://image.tmdb.org/t/p/w500/<%= @show['poster_path'] %>' alt='<%= @show['name'] %>' class='shows-img'></img>
        </div>
        <div class='col-lg'>
            <h1>
                <%=
                    link_to @show['name'],
                    @show['homepage'],
                    target: :_blank
                %>
            </h1>

            <% if @show && @show['created_by'][0] %>
                <h2>Created by <%= @show['created_by'][0]['name'] %></h2>
            <% end %>

            <% if @show && @show['genres'][0] %>
                <%= @show['genres'][0]['name'] %>
            <% end %>
            <% if @show && @show['number_of_seasons'][0] %>
                | <%= @show['number_of_seasons'] %> Season(s)
            <% end %>
            <% if @show && @show['number_of_episodes'][0] %>
                | <%= @show['number_of_episodes'] %> Episode(s)
            <% end %>

            <h3>Popularity Score: <%= @show['popularity'] %></h3>

            <b>Overview:</b> <%= @show['overview'] %>
        </div>
    </div>
</div>